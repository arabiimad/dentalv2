# .env.template

# Environnement
NODE_ENV=development

# === Base de données ===
# Pour SQLite (fichier local) :
DATABASE_TYPE=sqlite
DATABASE_URL="sqlite://./medusa.db"

# Si vous préférez Postgres, décommentez et ajustez ces lignes :
# DATABASE_TYPE=postgres
# DATABASE_URL="postgres://medusa:supersecret@localhost:5432/medusa"

# === Redis ===
# Laissez vide pour utiliser le fake-redis embarqué
REDIS_URL=

# === CORS ===
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:3000
AUTH_CORS=http://localhost:3000

# === Secrets obligatoires ===
JWT_SECRET=supersecret
COOKIE_SECRET=supersecret
